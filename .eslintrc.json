{
    "env": {
        "browser": true,
        "es2022": true
    },
    "extends": [
        "airbnb-base",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": ["@typescript-eslint"],
    "rules": {
        "max-len": [
            "off",
            {
                "code": 100,
                "ignoreUrls": true
            }
        ]
    }
}
